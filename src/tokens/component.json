{
  "component": {
    "terminal": {
      "background": { "$type": "color", "$value": "{color.monokai.background}" },
      "foreground": { "$type": "color", "$value": "{color.monokai.foreground}" },
      "accent": { "$type": "color", "$value": "{color.monokai.cyan}" },
      "success": { "$type": "color", "$value": "{color.monokai.green}" },
      "error": { "$type": "color", "$value": "{color.monokai.pink}" }
    },
    "card": {
      "border": { "$type": "color", "$value": "{color.border.subtle}" },
      "shadow": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.45)",
          "offsetX": "0px",
          "offsetY": "30px",
          "blur": "80px",
          "spread": "0px"
        }
      }
    }
  }
}
